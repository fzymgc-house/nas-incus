# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Universal settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# YAML files (Ansible, Docker Compose, etc.)
[*.{yml,yaml}]
indent_size = 2

# Terraform files
[*.{tf,tfvars,hcl}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 4

# Python files
[*.py]
indent_size = 4

# Ruby files
[*.rb]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Ansible inventory files
[{inventory,hosts}]
indent_size = 2

# Jinja2 templates
[*.j2]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 2

# Systemd unit files
[*.service]
indent_size = 2
