[Unit]
Description=Traefik Reverse Proxy (Docker Compose)
Documentation=https://doc.traefik.io/traefik/
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal
WorkingDirectory={{ traefik_config_directory }}

# Pull images before starting
ExecStartPre=/usr/bin/docker compose pull --quiet

# Start services
ExecStart=/usr/bin/docker compose up -d --remove-orphans

# Reload: Gracefully reload Traefik configuration
ExecReload=/usr/bin/docker compose exec -T traefik traefik version

# Stop services
ExecStop=/usr/bin/docker compose stop

# Cleanup
ExecStopPost=/usr/bin/docker compose rm -v -f

# Restart policy
Restart=on-failure
RestartSec=30s
StartLimitInterval=200
StartLimitBurst=3

# Environment
Environment="DOCKER_CLIENT_TIMEOUT=120"
Environment="COMPOSE_HTTP_TIMEOUT=120"
Environment="COMPOSE_PROJECT_NAME=traefik"

# Security
NoNewPrivileges=true
LimitNOFILE=1048576
LimitNPROC=512

[Install]
WantedBy=multi-user.target
